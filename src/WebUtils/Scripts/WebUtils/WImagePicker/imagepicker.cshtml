@using MinhaJuba.Models
@{
    Layout = null;
    var fileRepository = new FileRepository(Server);
    var model = fileRepository.List();
}
<!DOCTYPE html>
<html>
<head>
    <title>abc</title>
    <script src="/Scripts/JQuery/jquery-1.5.1.min.js" type="text/javascript"></script>
</head>
<body>
    <ul class="file-picker">
        @foreach (var item in model)
        {
            <li name="@item.Name"><a href="javascript:void(0)">
                <img src="@item.Thumbnail" /><br />
                @item.Name
                @item.Size</a> </li>
        }
    </ul>
    <button id="ok-button">
        Ok</button>
    <script>
        $('.file-picker li').click(function ()
        {
            $('.file-picker li').removeClass('selected');
            $(this).addClass('selected');
        });

        $('#ok-button').click(function ()
        {
            if (window.parent)
            {
                parent.OnFrameButtonClick($('.selected').attr("name"));
            }
        });
    </script>
</body>
</html>
